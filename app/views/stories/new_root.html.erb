

<div class="row">
	<div class="col-xs-3"></div>

	<div class="col-xs-6">
		<h1>Start a New Story</h1>
		<div class="form-container">
			<%= form_for(@story) do |f| %>
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control' %>

				<%= f.label :content %>
				<%= f.text_area :content, class: 'form-control' %>

				<%= f.hidden_field :published %>
				<br/>
				<%= f.submit "Publish story", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>

	<div class="col-xs-3"></div>
</div>